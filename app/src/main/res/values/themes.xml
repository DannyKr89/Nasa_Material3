<resources>
    <!-- Base application theme. -->
    <style name="Theme.Nasa" parent="Theme.Material3.DynamicColors.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyShapeAppearance" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize" >50%</item>
    </style>

    <style name="MyTextAppearance" parent="TextAppearance.Material3.LabelLarge">
        <item name="fontFamily">@font/artifika</item>
        <item name="android:fontFamily">@font/artifika</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">10sp</item>
        <item name="android:letterSpacing">0.5</item>
        <item name="android:textAllCaps">true</item>

    </style>

    <style name="Red" parent="Theme.Material3.DayNight">
        <item name="colorPrimary">#EE0000</item>
        <item name="colorPrimaryVariant">#B30015</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="Yellow" parent="Theme.Material3.DayNight">
        <item name="colorPrimary">#EEBA00</item>
        <item name="colorPrimaryVariant">#B38000</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>


    <style name="MyChips" parent="Widget.Material3.Chip.Suggestion">
        <item name="android:textAppearance">@style/MyTextAppearance</item>
        /<item name="shapeAppearance">@style/MyShapeAppearance</item>
    </style>


</resources>